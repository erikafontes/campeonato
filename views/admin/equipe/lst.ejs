<%-include('../cabecalho.ejs')%>
    <section class="col-12 col-md-10">
        <div class="card my-4">
            <h5 class="card-header">Lista de Equipes</h5>
            <div class="card-body">

                <form method="post" class="form-inline">
                    <div class="form-group mb-2">
                        <label for="pesquisar" class="sr-only">Pesquisar</label>
                        <input type="text" class="form-control" id="pesquisar" placeholder="Pesquisar" name="pesquisar">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
                </form>

                <table class="table table-striped table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Quantidade</th>
                            <th scope="col">campeonato</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Deletar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%Equipes.forEach(function(equipe){%>

                            <tr>
                                <th scope="row">
                                    <%=equipe._id%>
                                </th>
                                <td>
                                    <%=equipe.nome%>
                                </td>

                                <td>
                                    <%=equipe.quantidade%>
                                </td>

                                <td>
                                    <%=equipe.campeonato%>
                                </td>
                              
                                <td>
                                    <a href="/admin/equipe/edt/<%=equipe._id%>">Editar</a>
                                </td>
                                <td>
                                    <a href="/admin/equipe/lst/<%=equipe._id%>">Deletar</a>
                                </td>
                            </tr>

                            <%})%>

                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <%-include('../rodape.ejs')%>