<%- include('../cabecalho.ejs') %>

<section class="d-flex justify-content-center align-items-start" style="height: 100vh; background: linear-gradient(135deg, #0f2027, #0f2027, #2c5364);">
    <div class="card w-100" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3); border-radius: 15px; max-width: 900px; width: 100%; padding: 30px; margin-top: 100px;">
        <h5 class="card-header text-center" style="background: rgba(0, 0, 0, 0.1); color: #FFB400; font-size: 24px; padding: 15px; border-radius: 10px; font-weight: 300; font-family: 'Roboto', sans-serif;">
            Lista de Campeonatos
        </h5>
        <div class="card-body" style="color: #fff; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px;">
            <form method="post" class="form-inline mb-3">
                <div class="form-group mb-2">
                    <label for="pesquisar" class="sr-only"></label>
                    <input type="text" class="form-control" id="pesquisar" placeholder="Pesquisar" name="pesquisar" 
                           style="background: rgba(255, 255, 255, 0.2); border-radius: 10px; color: #fff; border: none; padding: 12px;">
                </div>
                <button type="submit" class="btn btn-warning mb-2" style="background-color: #FFB400; color: white; border: none; border-radius: 10px; font-size: 18px; font-weight: 500; padding: 8px 12px; cursor: pointer;">
                    Pesquisar
                </button>
            </form>

            <table class="table table-striped table-hover table-dark" style="border-radius: 10px;">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Deletar</th>
                    </tr>
                </thead>
                <tbody>
                    <% Campeonatos.forEach(function(campeonato) { %>
                    <tr>
                        <th scope="row"> <%= campeonato._id %> </th>
                        <td> <%= campeonato.nome %> </td>
                        <td>
                            <a href="/admin/campeonato/edt/<%= campeonato._id %>" style="color: #FFB400; font-weight: bold;">Editar</a>
                        </td>
                        <td>
                            <a href="/admin/campeonato/lst/<%= campeonato._id %>" style="color: #FFB400; font-weight: bold;">Deletar</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</section>

