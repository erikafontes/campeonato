<%- include('../cabecalho.ejs') %>

<section class="d-flex justify-content-center align-items-center" style="height: 100vh; background: linear-gradient(135deg, #0f2027, #0f2027, #2c5364);">
    <!-- Cartão de Lista -->
    <div class="card w-100" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3); border-radius: 15px; max-width: 900px; width: 100%; padding: 30px;">
        <h5 class="card-header" style="background: rgba(0, 0, 0, 0.1); color: #FFB400; font-size: 24px; padding: 15px; border-radius: 10px; text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            Lista de Equipes
        </h5>
        <div class="card-body" style="color: #fff; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 16px;">
            <!-- Formulário de Pesquisa -->
            <form method="post" class="form-inline mb-4">
                <div class="form-group mb-2">
                    <label for="pesquisar" class="sr-only">Pesquisar</label>
                    <input type="text" class="form-control" id="pesquisar" placeholder="Pesquisar" name="pesquisar"
                        style="background: rgba(255, 255, 255, 0.2); border-radius: 10px; color: #fff; border: none; padding: 10px;">
                </div>
                <button type="submit" class="btn btn-warning mb-2" style="background-color: #FFB400; color: white; border: none; border-radius: 10px; font-size: 18px; padding: 12px;">
                    Pesquisar
                </button>
            </form>

            <!-- Tabela de Equipes -->
            <table class="table table-striped table-hover table-dark" style="border-radius: 10px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Campeonato</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Deletar</th>
                    </tr>
                </thead>
                <tbody>
                    <% Equipes.forEach(function(equipe){ %>
                        <tr>
                            <th scope="row"><%= equipe._id %></th>
                            <td><%= equipe.nome %></td>
                            <td><%= equipe.quantidade %></td>
                            <td><%= equipe.campeonato %></td>
                            <td>
                                <a href="/admin/equipe/edt/<%= equipe._id %>" 
                                   style="color: #FFB400; text-decoration: none; font-weight: bold; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                    Editar
                                </a>
                            </td>
                            <td>
                                <a href="/admin/equipe/lst/<%= equipe._id %>" 
                                   style="color: #FFB400; text-decoration: none; font-weight: bold; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                    Deletar
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</section>

<%- include('../rodape.ejs') %>
